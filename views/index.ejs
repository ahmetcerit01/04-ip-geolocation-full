<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>IP Geolocation Monopoly Card</title>
  <style>
    body {
      background: #f0e6d2;
      font-family: 'Arial', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .card {
      width: 300px;
      border: 4px solid black;
      border-radius: 10px;
      background: white;
      text-align: center;
      padding: 20px;
      box-shadow: 5px 5px 0 black;
    }

    .card h1 {
      font-size: 22px;
      margin-bottom: 10px;
      color: #d92323;
    }

    .card p {
      margin: 5px 0;
    }

    .monopoly-line {
      width: 100%;
      height: 20px;
      background: #d92323;
      margin-bottom: 10px;
    }

    button {
      background: #d92323;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

  </style>
</head>
<body>

  <div class="card">
    <div class="monopoly-line"></div>
    <h1>IP Location Card</h1>
    <div id="result">
      <p>IP: -</p>
      <p>Country: -</p>
      <p>City: -</p>
    </div>
    <button onclick="getIPData()">Get My Location</button>
  </div>

  <script>
    async function getIPData() {
      try {
        // 1. IPIFY ile ip al
        const ipRes = await fetch('https://api.ipify.org?format=json');
        const ipData = await ipRes.json();
        
        // 2. Backend'e POST et
        const res = await fetch('/get-ip-data', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ ip: ipData.ip })
        });

        const data = await res.json();

        // 3. DOM'a yaz
        document.getElementById('result').innerHTML = `
          <p>IP: ${data.ip}</p>
          <p>Country: ${data.country_name}</p>
          <p>City: ${data.city}</p>
        `;

      } catch (err) {
        console.error(err);
        alert('Bir hata olu≈ütu.');
      }
    }
  </script>

</body>
</html>